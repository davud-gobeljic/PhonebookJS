<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Telefonski Imenik</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Ako imate dodatne stilove -->
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #343a40; /* Tamno siva pozadina */
            border-bottom: 2px solid #495057; /* Siva donja granica */
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Blaga sjenka */
        }
        .navbar-brand {
            display: flex;
            align-items: center;
        }
        .navbar-brand i {
            margin-right: 10px;
            color: #ffc107; /* Zlatna boja ikone */
        }
        .navbar-nav .nav-link {
            color: #ffffff; /* Bijela boja teksta za linkove */
            font-weight: bold;
        }
        .navbar-nav .nav-link:hover {
            color: #ffc107; /* Zlatna boja teksta na hover */
            background-color: rgba(255, 255, 255, 0.1); /* Blaga pozadina na hover */
            border-radius: 4px; /* Zaobljeni uglovi na hover */
        }
        .navbar-text {
            color: #ffffff; /* Bijela boja teksta u sredini */
            font-size: 1.2rem;
        }
        .btn-success, .btn-danger, .btn-primary {
            border-radius: 20px; /* Zaobljeni uglovi dugmadi */
        }
        .btn-success {
            background-color: #28a745; /* Zeleno dugme */
            border-color: #28a745;
        }
        .btn-danger {
            background-color: #dc3545; /* Crveno dugme */
            border-color: #dc3545;
        }
        .btn-primary {
            background-color: #007bff; /* Plavo dugme */
            border-color: #007bff;
        }
        .container {
            flex: 1;
        }
        .container h1 {
            text-align: center;
            margin-bottom: 40px;
        }
        .badge-custom {
            background-color: #ffc107;
            color: #212529;
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            margin-right: 10px;
        }
        .footer {
            background-color: #343a40;
            color: white;
            padding: 10px 0;
            text-align: center;
            margin-top: 40px;
            position: relative;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
            <i class="fas fa-address-book"></i> <!-- Ikonica imenika -->
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/current-page">Trenutna Stranica</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/lokali">Lokali</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/organizacija">Organizacija</a>
                </li>
            </ul>
            <span class="navbar-text mx-auto">
                <strong>INTERNI TELEFONSKI IMENIK MINISTARSTVA VANJSKIH POSLOVA BOSNE I HERCEGOVINE</strong>
            </span>
            <% if (isAdmin) { %>
                <a href="/add" class="btn btn-success mr-2">Dodaj Novog Korisnika</a>
            <% } %>
            <% if (req.session.user) { %>
                <a href="/logout" class="btn btn-danger">Odjavi se</a>
            <% } else { %>
                <a href="/login" class="btn btn-primary">Prijavi se</a>
            <% } %>
        </div>
    </nav>

    <div class="container">
        <h1 class="mb-4">Telefonski Imenik Ambasada</h1>
        <% if (isAdmin) { %>
            <a href="/add" class="btn btn-success mb-4">Dodaj Novog Korisnika</a>
        <% } %>
        <% Object.keys(groupedUsers).forEach(ambasada_broj => { %>
            <h2>
                <span class="badge badge-custom"><%= ambasada_broj %></span>
                <%= groupedUsers[ambasada_broj].ambasada %> Ambasada
            </h2>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Ime i Prezime</th>
                        <th scope="col">Funkcija</th>
                        <th scope="col">Lokal</th>
                        <% if (isAdmin) { %>
                            <th scope="col">Akcije</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% groupedUsers[ambasada_broj].users.forEach(entry => { %>
                        <tr>
                            <td><%= entry.ime_prezime %></td>
                            <td><%= entry.funkcija %></td>
                            <td><%= entry.lokal %></td>
                            <% if (isAdmin) { %>
                                <td>
                                    <a href="/edit/<%= entry.id %>" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i> Uredi</a>
                                    <a href="/delete/<%= entry.id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Obri≈°i</a>
                                </td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% }); %>
    </div>

    <footer class="footer">
        <div class="container">
            <span>&copy; 2024 Telefonski Imenik</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
